name: C/C++ CI

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: generating makefile.am by autotools
      run: ./autogen
    - name: configure
      run: ./configure
    - name: make
      run: make
    - name: make check
      run: make check
